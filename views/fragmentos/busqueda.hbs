<div class="sidebar-box pt-md-4">
    <form action="/search" class="search-form">
        <div class="form-group">
            <span class="icon icon-search "></span>

            {{#if b}}
            {{#if b.texto}}
            <input  value="{{b.texto}}" type="text" class="form-control" placeholder="Search" name="texto">  <!-- Para buscador -->

            <small>encontrados {{b.cantidad}} resultados para {{b.texto}}</small>


            {{/if}}
            {{else}} 
            <input  type="text" class="form-control" placeholder="Search" name="texto">  <!-- Para buscador -->
            {{/if}}
        </div>
        <div class="form-group">
            <a class="btn btn-link btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                Busqueda avanzada
            </a>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <small>por defecto las busquedas se realizan por el titulo cambie el criterio</small>
                    <label>Criterio:</label>
                    <select name="criterio"  class="btn-custom" id="criterio"> 
                        <option value="" ></option>
                        <option value="etiquetas" >etiquetas</option>
                        <option value="categoria" >categoria</option>
                    </select>
                </div>
            </div>
        </div>
    </form>
</div>



