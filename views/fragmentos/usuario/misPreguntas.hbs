<div class="row pt-md-4" style="margin-top: 100px">
    <div class="col-md-12">

        <div class="container">
            {{#if msg}}
            {{#if msg.error}}
            <div class="form-group">
                <div class="label label-danger" style="font-size: 16px">
                    {{msg.error}}
                </div>
            </div>
            {{/if}}
            {{#if msg.info}}
            <div class="form-group">
                <div class="label label-success" style="font-size: 16px">
                    {{msg.info}}
                </div>
            </div>
            {{/if}}
            {{/if}}
            <div class="table-responsive-md">
                <table id="example" class=" table table-bordered display" style="width:100%">
                    <thead class=" thead-dark">
                        <tr>
                            <th><b>TITULO</b></th>

                            <th><b>N° RESPUESTA</b></th>
                            <th><b>Tiene respuesta aceptada</b></th>
                            <th><b>CATEGORIA</b></th>
                            <th><b>ETIQUETAS</b></th>
                            <th><b>N° VISTAS</b></th>
                            <th><b>ACCIONES</b></th> 

                        </tr>
                    </thead>
                    <tbody>
                        {{#if lista}}
                        {{#each lista}}
                        <tr>
                            <td><a class="btn-light" href="/pregunta/{{this.external_id}}">{{this.titulo}}</a></td>
                            <td>{{this.respuesta.length}}</td>
                            <td>
                                {{#aceptada this.respuesta }}

                                {{/aceptada}}
                            </td>
                            <td>{{this.categorium.nombre }} </td>
                            <td>{{this.etiquetas}}</td>
                            <td>{{this.numero_vistas}}</td>
                            <td>
                                <form method="POST" action="/dpregunta">
                                    <input type="hidden" value="{{this.external_id}}" name="external">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Esta seguro de eliminar la pregunta?')">Borrar</button>
                                </form>

                            </td>

                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


