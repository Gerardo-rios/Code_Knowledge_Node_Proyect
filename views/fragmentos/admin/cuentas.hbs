<div class="row pt-md-4" style="margin-top: 100px">
    <div class="col-md-12">

        <div class="container">
            <div class="table-responsive-md">
                <table id="example" class=" table table-bordered display" style="width:100%">
                    <thead class="thead-light light">
                        <tr>
                            <th><b>Imagen</b></th>
                            <th><b>correo</b></th>
                            <th><b>nombre usuario</b></th>
                            <th><b>nombre</b></th>
                            <th><b>fecha creacion</b></th>
                            <th><b>Rol</b></th>
                            <th><b>activa</b></th>
                            <th><b>tipo cuenta</b></th>
                            <th><b>Acciones</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if lista}}
                        {{#each lista}}
                        <tr>
                            <td><img class="user-avatar-md rounded-circle" src="{{this.imagen}}"></img></td>
                            <td>{{this.cuenta.email}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this.nombres}} {{this.apellidos}}</td>
                            <td>{{dateFormat this.createdAt "YYYY-MM-DD; hh:mm a"}} </td>
                            {{#if_eq this.cuenta.id_rol 1}}
                            <td>Administrador</td>
                            {{else}}
                            <td>Usuario</td>
                            {{/if_eq}}
                            {{#if_eq this.cuenta.activa true}}
                            <td>activa</td>
                            {{else}}
                            <td>inactiva</td>
                            {{/if_eq}}
                            {{#if_eq this.cuenta.tipo_cuenta 1}}
                            <td>Facebook</td>

                            {{/if_eq}}
                            {{#if_eq this.cuenta.tipo_cuenta 2}}
                            <td>Google</td>

                            {{/if_eq}}
                            {{#if_eq this.cuenta.tipo_cuenta 0}}
                            <td>Local</td>

                            {{/if_eq}}



                            <td><a  href="/cuenta/{{this.external_id}}" onclick="location.refresh()" class="btn btn-danger btn-sm" id="bloquear">bloquear</a><a href="/descuenta/{{this.external_id}}"  onclick="location.refresh()" class="btn btn-secondary btn-sm" id="bloquear">desbloquear</a>
                            </td>

                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
